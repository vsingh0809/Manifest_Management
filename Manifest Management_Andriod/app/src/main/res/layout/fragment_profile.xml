<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_for_login"
    android:padding="16dp">

    <!-- ImageView for the crew profile picture -->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile" />


    <!-- TextViews to show crew details with spacing -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/itemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/itemEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/itemContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: "
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/itemDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dob"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/itemGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Buttons for Edit Profile, Change Email, Change Password, and Logout -->
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/changeEmailButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Email"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Logout" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newEmailAddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_for_login"
    tools:context=".Fragment.ChangePasswordFragment">

    <EditText
        android:id="@+id/oldPasword"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter old password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/verifyOldPassword"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginLeft="140dp"
        android:text="Verify Old Password"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/newPasword"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmPasword"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Confirm new password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/savePassword"
            android:layout_width="400dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Save"
            android:textSize="24sp" />

        <Button
            android:id="@+id/resetPassword"
            android:layout_width="400dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Reset"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>
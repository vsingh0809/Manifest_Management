<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newEmailAddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_for_login"
    tools:context=".Fragment.ChangePasswordFragment">

    <EditText
        android:id="@+id/crewUsername"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Enter old Email Address"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/material_dynamic_neutral80" />

    <EditText
        android:id="@+id/newEmail"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter new Email Address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/confirmEmail"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Confirm new Email Address"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveEmail"
            android:layout_width="400dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Save"
            android:textSize="24sp" />

        <Button
            android:id="@+id/resetEmail"
            android:layout_width="400dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="Reset"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>